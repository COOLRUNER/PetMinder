@page "/admin/users/{UserId:long}"
@layout AdminLayout
@using Microsoft.AspNetCore.Authorization
@using PetMinder.Shared.DTO
@using PetMinder.Client.Services
@inject AdminService AdminService
@inject NavigationManager Nav
@attribute [Authorize(Roles = "Admin")]

<div class="mb-6">
    <a href="admin/users" class="flex items-center gap-1 text-sm text-slate-500 hover:text-emerald-600 mb-4">
        <Heroicon Name="@HeroiconName.ArrowLeft" Type="@HeroiconType.Mini" class="w-4 h-4" />
        Back to Users
    </a>
</div>

@if (details == null)
{
    <div class="text-center py-12 text-slate-400">Loading user details...</div>
}
else
{
    <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-200 mb-6 flex justify-between items-start">
        <div class="flex gap-4">
            <div class="h-16 w-16 rounded-full bg-slate-100 flex items-center justify-center text-2xl">
                ðŸ‘¤
            </div>
            <div>
                <h1 class="text-2xl font-bold text-slate-900">@details.UserInfo.FirstName @details.UserInfo.LastName</h1>
                <div class="flex gap-2 text-sm text-slate-500 mt-1">
                    <span>@details.UserInfo.Email</span>
                    <span>â€¢</span>
                    <span>@details.UserInfo.Phone</span>
                    <span>â€¢</span>
                    <span class="font-mono">ID: @details.UserInfo.UserId</span>
                </div>
                <div class="mt-3 flex gap-2">
                    <span class="px-2 py-1 rounded bg-slate-100 text-xs font-bold text-slate-600 uppercase">@details.UserInfo.RoleString</span>
                    @if (details.UserInfo.IsFlagged)
                    {
                        <span class="px-2 py-1 rounded bg-rose-100 text-xs font-bold text-rose-700 uppercase flex items-center gap-1">
                            <Heroicon Name="@HeroiconName.ExclamationTriangle" Type="@HeroiconType.Mini" class="w-3 h-3" /> Flagged
                        </span>
                    }
                </div>
            </div>
        </div>
        
        <div class="text-right">
             <div class="text-sm text-slate-500 mb-1">Current Balance</div>
             <div class="text-3xl font-bold font-mono @(details.UserInfo.CurrentPoints < 0 ? "text-rose-600" : "text-emerald-600")">
                 @details.UserInfo.CurrentPoints
             </div>
             <button @onclick="ToggleFlag" class="mt-4 text-xs font-bold underline @(details.UserInfo.IsFlagged ? "text-emerald-600" : "text-rose-600")">
                 @(details.UserInfo.IsFlagged ? "Remove Flag" : "Flag as Suspicious")
             </button>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
        
        <div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden">
            <div class="bg-slate-50 px-6 py-4 border-b border-slate-200 font-bold text-slate-700">
                Recent Transactions
            </div>
            <div class="p-0">
                @if (details.RecentTransactions.Count == 0) { <div class="p-6 text-sm text-slate-400">No transactions found.</div> }
                <table class="w-full text-sm text-left">
                    <thead class="bg-slate-50 text-xs text-slate-400 uppercase">
                        <tr>
                            <th class="px-4 py-2 font-medium">ID</th>
                            <th class="px-4 py-2 font-medium">Date</th>
                            <th class="px-4 py-2 font-medium">Description</th>
                            <th class="px-4 py-2 font-medium text-right">Amount</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100">
                        @foreach(var t in details.RecentTransactions)
                        {
                            <tr class="hover:bg-slate-50">
                                <td class="px-4 py-3 font-mono text-xs text-slate-400">#@t.Id</td>
                                <td class="px-4 py-3 text-slate-500 text-xs">@t.OccurredAt.ToShortDateString()</td>
                                <td class="px-4 py-3 text-slate-900 font-medium">@t.Description</td>
                                <td class="px-4 py-3 text-right font-mono @(t.IsCredit ? "text-emerald-600" : "text-rose-600")">
                                    @(t.IsCredit ? "+" : "-")@t.Amount
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden">
            <div class="bg-slate-50 px-6 py-4 border-b border-slate-200 font-bold text-slate-700">
                Recent Bookings
            </div>
            <div class="p-0">
                 @if (details.RecentBookings.Count == 0) { <div class="p-6 text-sm text-slate-400">No bookings found.</div> }
                 <table class="w-full text-sm text-left">
                    <thead class="bg-slate-50 text-xs text-slate-400 uppercase">
                        <tr>
                            <th class="px-4 py-2 font-medium">ID</th>
                            <th class="px-4 py-2 font-medium">Date</th>
                            <th class="px-4 py-2 font-medium">Details</th>
                            <th class="px-4 py-2 font-medium text-right">Status</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100">
                        @foreach(var b in details.RecentBookings)
                        {
                            <tr class="hover:bg-slate-50">
                                <td class="px-4 py-3 font-mono text-xs text-slate-400">#@b.Id</td>
                                <td class="px-4 py-3 text-slate-500 text-xs">@b.Date.ToShortDateString()</td>
                                <td class="px-4 py-3">
                                    <div class="text-xs text-slate-500">with @b.OtherUserName</div>
                                </td>
                                <td class="px-4 py-3 text-right">
                                    <span class="px-2 py-1 rounded-full text-xs font-bold bg-slate-100 text-slate-600">@b.Status</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden mb-6">
        <div class="bg-slate-900 px-6 py-4 border-b border-slate-800 flex justify-between items-center">
            <h3 class="font-bold text-white flex items-center gap-2">
                <Heroicon Name="@HeroiconName.ChatBubbleLeftRight" Type="@HeroiconType.Mini" class="w-5 h-5 text-emerald-400" />
                Conversations Log
            </h3>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 min-h-[400px]">
            <div class="border-r border-slate-200 bg-slate-50 overflow-y-auto max-h-[500px]">
                @if (conversations == null)
                {
                    <div class="p-4 text-xs text-slate-400 text-center">Loading chats...</div>
                }
                else if (!conversations.Any())
                {
                    <div class="p-8 text-sm text-slate-400 text-center italic">No conversation history found.</div>
                }
                else
                {
                    @foreach (var conv in conversations)
                    {
                        var otherPerson = conv.Participants.FirstOrDefault(p => p.UserId != UserId)?.UserName ?? "Unknown";
                        var isActive = selectedConversationId == conv.ConversationId;
                        
                        <div class="p-4 border-b border-slate-200 cursor-pointer transition-colors @(isActive ? "bg-white border-l-4 border-l-emerald-500" : "hover:bg-slate-100")"
                             @onclick="() => LoadTranscript(conv.ConversationId)">
                            <div class="flex justify-between items-start mb-1">
                                <span class="font-bold text-sm text-slate-800 truncate pr-2">@otherPerson</span>
                                <span class="text-[10px] text-slate-400 whitespace-nowrap">@conv.CreatedAt.ToShortDateString()</span>
                            </div>
                            <div class="text-xs text-slate-500 truncate">
                                @(conv.LastMessage?.Content ?? "No messages")
                            </div>
                        </div>
                    }
                }
            </div>

            <div class="md:col-span-2 bg-white flex flex-col max-h-[500px]">
                @if (selectedConversationId == 0)
                {
                    <div class="flex-1 flex flex-col items-center justify-center text-slate-300">
                        <Heroicon Name="@HeroiconName.ChatBubbleLeft" Type="@HeroiconType.Outline" class="w-12 h-12 mb-2" />
                        <p class="text-sm">Select a conversation to view the full transcript.</p>
                    </div>
                }
                else if (isLoadingMessages)
                {
                    <div class="flex-1 flex items-center justify-center text-slate-400 text-sm">
                        <div class="animate-spin rounded-full h-5 w-5 border-b-2 border-slate-400 mr-2"></div>
                        Loading transcript...
                    </div>
                }
                else
                {
                    <div class="flex-1 overflow-y-auto p-6 space-y-4 bg-slate-50/30">
                        @if (!transcript.Any())
                        {
                            <div class="text-center text-xs text-slate-400 italic my-4">-- Conversation Started --</div>
                        }
                        
                        @foreach (var msg in transcript)
                        {
                            var isUser = msg.SenderId == UserId;
                            
                            <div class="flex flex-col @(isUser ? "items-end" : "items-start")">
                                <div class="max-w-[85%] rounded-2xl px-4 py-2.5 text-sm shadow-sm border @(isUser ? "bg-indigo-50 border-indigo-100 text-indigo-900 rounded-tr-none" : "bg-white border-slate-200 text-slate-700 rounded-tl-none")">
                                    @if (!isUser) 
                                    {
                                        <div class="text-[10px] font-bold text-slate-400 mb-0.5">@msg.SenderName</div>
                                    }
                                    @msg.Content
                                </div>
                                <span class="text-[10px] text-slate-400 mt-1 px-1">
                                    @msg.SentAt.ToLocalTime().ToString("g")
                                </span>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden">
         <div class="bg-slate-50 px-6 py-4 border-b border-slate-200 font-bold text-slate-700">
            Reviews Received
        </div>
        <div class="divide-y divide-slate-100">
            @if (details.RecentReviews.Count == 0) { <div class="p-6 text-sm text-slate-400">No reviews found.</div> }
            @foreach(var r in details.RecentReviews)
            {
                <div class="p-4 hover:bg-slate-50">
                    <div class="flex justify-between mb-1">
                        <div class="flex items-center gap-2">
                            <span class="font-bold text-slate-900">@r.AuthorName</span>
                            <span class="px-1.5 py-0.5 rounded bg-slate-100 text-[10px] font-mono text-slate-400">#@r.Id</span>
                        </div>
                        <span class="text-amber-500 font-bold">â˜… @r.Rating</span>
                    </div>
                    <p class="text-sm text-slate-600">"@r.Content"</p>
                    <div class="text-xs text-slate-400 mt-2">@r.CreatedAt.ToShortDateString()</div>
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter] public long UserId { get; set; }
    private AdminUserDetailsDTO? details;
    
    private List<ConversationDTO>? conversations;
    private List<MessageDTO> transcript = new();
    private long selectedConversationId = 0;
    private bool isLoadingMessages = false;

    protected override async Task OnInitializedAsync()
    {
        var userDetailsTask = AdminService.GetUserDetailsAsync(UserId);
        var conversationsTask = AdminService.GetUserConversationsAsync(UserId);

        await Task.WhenAll(userDetailsTask, conversationsTask);

        details = await userDetailsTask;
        conversations = await conversationsTask;
    }

    private async Task LoadTranscript(long conversationId)
    {
        selectedConversationId = conversationId;
        isLoadingMessages = true;
        StateHasChanged(); 
        
        transcript = await AdminService.GetConversationMessagesAsync(conversationId);
        
        isLoadingMessages = false;
    }

    private async Task ToggleFlag()
    {
        if (details == null) return;
        var success = await AdminService.ToggleFlagUserAsync(UserId);
        if (success)
        {
            details.UserInfo.IsFlagged = !details.UserInfo.IsFlagged;
        }
    }
}