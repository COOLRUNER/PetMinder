@page "/admin/reviews"
@layout AdminLayout
@using Microsoft.AspNetCore.Authorization
@using PetMinder.Shared.DTO
@using PetMinder.Client.Services
@inject AdminService AdminService
@inject IJSRuntime JS
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Admin • Reported Reviews</PageTitle>

<div class="mb-8">
    <h1 class="text-3xl font-bold text-slate-900">Review Moderation</h1>
    <p class="mt-1 text-slate-500">Review reported content and take action.</p>
</div>

@if (isLoading)
{
    <div class="text-center py-12 text-slate-400">Loading reports...</div>
}
else if (reviews.Count == 0)
{
    <div class="flex flex-col items-center justify-center py-16 rounded-3xl bg-slate-50 border border-slate-200 border-dashed">
        <div class="text-4xl mb-4">✨</div>
        <h3 class="text-lg font-bold text-slate-900">All Clear!</h3>
        <p class="text-slate-500">There are no pending reports to review.</p>
    </div>
}
else
{
    <div class="space-y-6">
        @foreach (var item in reviews)
        {
            <div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden flex flex-col lg:flex-row">
                <div class="flex-1 p-6 border-b lg:border-b-0 lg:border-r border-slate-100">
                    <div class="flex justify-between items-start mb-4">
                        <div class="flex items-center gap-3">
                            <div class="h-10 w-10 rounded-full bg-emerald-100 flex items-center justify-center text-emerald-700 font-bold">
                                @(item.AuthorName.Length > 0 ? item.AuthorName[0] : '?')
                            </div>
                            <div>
                                <div class="font-bold text-slate-900">@item.AuthorName</div>
                                <div class="text-xs text-slate-500">To: @item.TargetName • @item.CreatedAt.ToShortDateString()</div>
                            </div>
                        </div>
                        <div class="text-amber-500 font-bold text-sm">★ @item.Rating</div>
                    </div>
                    
                    <div class="bg-slate-50 p-4 rounded-xl text-slate-700 italic text-sm border border-slate-100 relative">
                        <span class="absolute top-2 left-2 text-3xl text-slate-200 -z-0">“</span>
                        <span class="relative z-10">@item.Content</span>
                    </div>
                </div>

                <div class="w-full lg:w-96 bg-rose-50/50 p-6 flex flex-col justify-between">
                    <div>
                        <h4 class="text-xs font-bold uppercase tracking-wider text-rose-800 mb-3 flex items-center gap-2">
                            <Heroicon Name="@HeroiconName.ExclamationTriangle" Type="@HeroiconType.Mini" class="w-4 h-4" />
                            @item.Reports.Count Report(s)
                        </h4>
                        <ul class="space-y-3 mb-6">
                            @foreach (var report in item.Reports)
                            {
                                <li class="text-sm border-l-2 border-rose-300 pl-3">
                                    <span class="font-bold text-slate-900 block text-xs">@report.ReporterName</span>
                                    <span class="text-slate-600 italic">"@report.Reason"</span>
                                    <span class="text-[10px] text-slate-400 block mt-1">@report.ReportedAt.ToShortDateString()</span>
                                </li>
                            }
                        </ul>
                    </div>

                    <div class="flex gap-3 mt-auto">
                        <button @onclick="() => DismissReports(item)" 
                                class="flex-1 rounded-lg border border-slate-300 bg-white py-2 text-xs font-bold text-slate-700 hover:bg-slate-50 transition shadow-sm">
                            Dismiss (Keep)
                        </button>
                        <button @onclick="() => DeleteReview(item)" 
                                class="flex-1 rounded-lg bg-rose-600 py-2 text-xs font-bold text-white hover:bg-rose-700 transition shadow-sm shadow-rose-200">
                            Delete Review
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<AdminReportedReviewDTO> reviews = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        reviews = await AdminService.GetReportedReviewsAsync();
        isLoading = false;
    }

    private async Task DeleteReview(AdminReportedReviewDTO item)
    {
        bool confirm = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to PERMANENTLY delete this review?");
        if (!confirm) return;

        bool success = await AdminService.DeleteReviewAsync(item.ReviewId);
        if (success) reviews.Remove(item);
    }

    private async Task DismissReports(AdminReportedReviewDTO item)
    {
        bool success = await AdminService.DismissReportsAsync(item.ReviewId);
        if (success) reviews.Remove(item);
    }
}