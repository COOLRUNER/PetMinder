@page "/findsitters"
@using PetMinder.Shared.DTO
@using PetMinder.Client.Services
@inject SitterSearchService SitterSearchService
@inject PetService PetService
@inject AddressService AddressService
@inject NavigationManager NavigationManager
@inject AuthService AuthService
@inject IConfiguration Configuration

<div class="min-h-screen bg-slate-50 text-slate-900">
    <div class="bg-white border-b border-slate-200">
        <div class="mx-auto max-w-6xl px-4 py-8">
            <h1 class="text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">Find the Perfect Sitter</h1>
            <p class="mt-2 text-lg text-slate-600">Search for verified sitters nearby who match your needs.</p>
        </div>
    </div>

    <div class="mx-auto max-w-6xl px-4 py-8">
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
            <div class="lg:col-span-1">
                <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm sticky top-6">
                    <h2 class="text-lg font-semibold text-slate-900 mb-4">Search Criteria</h2>

                    <EditForm Model="@searchRequest" OnValidSubmit="HandleSearch">
                        <DataAnnotationsValidator />

                        <div class="space-y-4">
                            <div>
                                <label class="block text-xs font-bold uppercase tracking-wide text-slate-500 mb-1">From</label>
                                <InputDate Type="InputDateType.DateTimeLocal" @bind-Value="searchRequest.DesiredStartTime" class="w-full rounded-lg border-slate-200 text-sm focus:border-emerald-500 focus:ring-emerald-500" />
                                <ValidationMessage For="@(() => searchRequest.DesiredStartTime)" class="text-xs text-rose-500 mt-1" />
                            </div>

                            <div>
                                <label class="block text-xs font-bold uppercase tracking-wide text-slate-500 mb-1">To</label>
                                <InputDate Type="InputDateType.DateTimeLocal" @bind-Value="searchRequest.DesiredEndTime" class="w-full rounded-lg border-slate-200 text-sm focus:border-emerald-500 focus:ring-emerald-500" />
                                <ValidationMessage For="@(() => searchRequest.DesiredEndTime)" class="text-xs text-rose-500 mt-1" />
                            </div>

                            <div>
                                <label class="block text-xs font-bold uppercase tracking-wide text-slate-500 mb-1">Location</label>
                                @if (addresses == null)
                                {
                                    <div class="h-9 w-full rounded-lg bg-slate-100 animate-pulse"></div>
                                }
                                else if (!addresses.Any())
                                {
                                    <div class="text-sm text-rose-500">
                                        No addresses found. <a href="profile/addresses" class="underline hover:text-rose-600">Add one?</a>
                                    </div>
                                }
                                else
                                {
                                    <InputSelect @bind-Value="searchRequest.SearchFromAddressId" class="w-full rounded-lg border-slate-200 text-sm focus:border-emerald-500 focus:ring-emerald-500">
                                        <option value="0">Select address...</option>
                                        @foreach (var addr in addresses)
                                        {
                                            <option value="@addr.AddressId">@addr.Street, @addr.City</option>
                                        }
                                    </InputSelect>
                                    <ValidationMessage For="@(() => searchRequest.SearchFromAddressId)" class="text-xs text-rose-500 mt-1" />
                                }
                            </div>

                            <div>
                                <label class="block text-xs font-bold uppercase tracking-wide text-slate-500 mb-2">My Pets</label>
                                @if (pets == null)
                                {
                                    <div class="space-y-2">
                                        <div class="h-6 w-full rounded bg-slate-100 animate-pulse"></div>
                                        <div class="h-6 w-3/4 rounded bg-slate-100 animate-pulse"></div>
                                    </div>
                                }
                                else if (!pets.Any())
                                {
                                    <div class="text-sm text-rose-500">
                                        No pets found. <a href="pets" class="underline hover:text-rose-600">Add one?</a>
                                    </div>
                                }
                                else
                                {
                                    <div class="space-y-2">
                                        @foreach (var pet in pets)
                                        {
                                            <div class="flex items-center gap-2">
                                                <input type="checkbox" id="pet-@pet.PetId"
                                                       @onchange="@(e => TogglePet(pet.PetId, e))"
                                                       checked="@(searchRequest.SelectedPetIds.Contains(pet.PetId))"
                                                       class="rounded border-slate-300 text-emerald-600 focus:ring-emerald-500" />
                                                <label for="pet-@pet.PetId" class="text-sm text-slate-700 select-none cursor-pointer">@pet.Name</label>
                                            </div>
                                        }
                                    </div>
                                    <ValidationMessage For="@(() => searchRequest.SelectedPetIds)" class="text-xs text-rose-500 mt-1" />
                                }
                            </div>

                            <button type="submit" disabled="@isSearching" class="w-full rounded-xl bg-emerald-500 px-4 py-2.5 text-sm font-semibold text-white shadow-sm transition hover:bg-emerald-600 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed">
                                @if (isSearching)
                                {
                                    <span>Searching...</span>
                                }
                                else
                                {
                                    <span>Find Sitters</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>

            <div class="lg:col-span-3">
                @if (!hasSearched)
                {
                    <div class="flex flex-col items-center justify-center rounded-3xl border border-dashed border-slate-200 bg-slate-50 py-20 text-center">
                        <div class="mb-4 rounded-full bg-emerald-50 p-4 text-emerald-500">
                            <Heroicon Name="@HeroiconName.MagnifyingGlass" Type="@HeroiconType.Outline" class="w-10 h-10" />
                        </div>
                        <h3 class="text-lg font-semibold text-slate-900">Ready to search</h3>
                        <p class="mt-1 max-w-sm text-sm text-slate-500">
                            Select your dates, location, and pets to find available sitters nearby.
                        </p>
                    </div>
                }
                else if (searchResults != null && !searchResults.Any())
                {
                    <div class="flex flex-col items-center justify-center rounded-3xl border border-dashed border-slate-200 bg-slate-50 py-20 text-center">
                        <div class="mb-4 rounded-full bg-slate-100 p-4 text-slate-400">
                            <Heroicon Name="@HeroiconName.FaceFrown" Type="@HeroiconType.Outline" class="w-10 h-10" />
                        </div>
                        <h3 class="text-lg font-semibold text-slate-900">No sitters found</h3>
                        <p class="mt-1 max-w-sm text-sm text-slate-500">
                            We couldn't find anyone matching those criteria. Try changing dates or location.
                        </p>
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <p class="mt-4 rounded-lg bg-rose-50 px-4 py-2 text-xs font-medium text-rose-600">@errorMessage</p>
                        }
                    </div>
                }
                else if (searchResults != null)
                {
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        @foreach (var sitter in searchResults)
                        {
                            <div class="group relative flex flex-col overflow-hidden rounded-3xl border border-slate-200 bg-white shadow-sm transition hover:shadow-md hover:border-emerald-200">
                                <div class="p-6 flex-1">
                                    <div class="flex items-start justify-between gap-4">
                                        <div class="flex gap-4">
                                            <div class="h-16 w-16 flex-shrink-0 overflow-hidden rounded-full bg-slate-100 ring-2 ring-white shadow-sm flex items-center justify-center">
                                                @if (!string.IsNullOrEmpty(sitter.ProfilePhotoUrl))
                                                {
                                                    <img src="@GetPhotoUrl(sitter.ProfilePhotoUrl)" alt="@sitter.FirstName" class="h-full w-full object-cover" />
                                                }
                                                else
                                                {
                                                    <Heroicon Name="@HeroiconName.User" Type="@HeroiconType.Solid" class="w-8 h-8 text-slate-300" />
                                                }
                                            </div>
                                            <div>
                                                <div class="flex items-center gap-2">
                                                    <h3 class="text-lg font-bold text-slate-900 group-hover:text-emerald-600 transition-colors">@sitter.FirstName @sitter.LastName?.FirstOrDefault().</h3>
                                                    @if (sitter.IsVerified)
                                                    {
                                                        <span class="inline-flex items-center gap-1 rounded-full bg-emerald-100 px-2 py-0.5 text-[10px] font-bold text-emerald-700 ring-1 ring-inset ring-emerald-600/20">
                                                            <Heroicon Name="@HeroiconName.ShieldCheck" Type="@HeroiconType.Solid" class="h-3 w-3" />
                                                            Verified
                                                        </span>
                                                    }
                                                </div>
                                                <div class="mt-1 flex items-center gap-1.5 text-sm text-slate-500">
                                                    <Heroicon Name="@HeroiconName.MapPin" Type="@HeroiconType.Solid" class="w-3.5 h-3.5 text-slate-400" />
                                                    @if (sitter.DistanceInKm.HasValue)
                                                    {
                                                        <span class="font-medium text-slate-700">@sitter.DistanceInKm.Value.ToString("F1") km</span>
                                                        <span>away</span>
                                                    }
                                                    else
                                                    {
                                                        <span>Distance unknown</span>
                                                    }
                                                </div>
                                                <div class="mt-1 flex items-center gap-1 text-sm">
                                                    <Heroicon Name="@HeroiconName.Star" Type="@HeroiconType.Solid" class="w-3.5 h-3.5 text-amber-400" />
                                                    <span class="font-bold text-slate-900">@sitter.AverageRating.ToString("F1")</span>
                                                    <span class="text-slate-500">(@sitter.ReviewCount)</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="border-t border-slate-100 bg-slate-50/50 p-4 px-6">
                                    <div class="flex gap-3">
                                        <button @onclick="() => NavigateToProfile(sitter.UserId)" class="flex-1 rounded-xl bg-slate-900 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-emerald-600 focus:outline-none focus:ring-2 focus:ring-slate-900 focus:ring-offset-2">
                                            View Profile
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private SitterSearchRequestDTO searchRequest = new()
    {
        DesiredStartTime = DateTime.Today,
        DesiredEndTime = DateTime.Today.AddDays(1)
    };

    private List<PetDTO>? pets;
    private List<AddressDTO>? addresses;
    private List<UserProfileDTO>? searchResults;
    private bool isSearching = false;
    private bool hasSearched = false;
    private string? errorMessage;
    private long? currentUserId;

    [Inject] private ConversationService ConversationService { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        var petsTask = PetService.GetPetsAsync();
        var addressTask = AddressService.GetUserAddressesAsync();
        var userProfileTask = AuthService.GetUserProfileAsync();

        await Task.WhenAll(petsTask, addressTask, userProfileTask);

        pets = await petsTask;
        addresses = await addressTask;
        var userProfile = await userProfileTask;
        currentUserId = userProfile?.UserId;

        if (addresses != null && addresses.Any())
        {
            searchRequest.SearchFromAddressId = addresses.First().AddressId;
        }
    }

    private void TogglePet(long petId, ChangeEventArgs e)
    {
        if (e.Value is bool isChecked)
        {
            if (isChecked)
            {
                if (!searchRequest.SelectedPetIds.Contains(petId))
                {
                    searchRequest.SelectedPetIds.Add(petId);
                }
            }
            else
            {
                searchRequest.SelectedPetIds.Remove(petId);
            }
        }
    }

    private async Task HandleSearch()
    {
        isSearching = true;
        errorMessage = null;
        searchResults = null;

        if (searchRequest.DesiredStartTime > searchRequest.DesiredEndTime)
        {
            errorMessage = "Start time cannot be after end time.";
            isSearching = false;
            hasSearched = true; 
            return;
        }

        if (searchRequest.SearchFromAddressId == 0)
        {
            errorMessage = "Please select an address.";
            isSearching = false;
            return;
        }

        if (!searchRequest.SelectedPetIds.Any())
        {
            errorMessage = "Please select at least one pet.";
            isSearching = false;
            return;
        }

        var result = await SitterSearchService.SearchAvailableSittersAsync(searchRequest);

        if (result.IsSuccess)
        {
            searchResults = result.Data?
                .Where(s => s.UserId != currentUserId)
                .ToList();
        }
        else
        {
            errorMessage = result.ErrorMessage;
            searchResults = new List<UserProfileDTO>();
        }

        hasSearched = true;
        isSearching = false;
    }

    private void NavigateToProfile(long userId)
    {
        var startTime = searchRequest.DesiredStartTime.ToString("O");
        var endTime = searchRequest.DesiredEndTime.ToString("O");
        var url = $"/sitterdetails/{userId}?SearchStartTime={startTime}&SearchEndTime={endTime}";

        if (searchRequest.SelectedPetIds.Any())
        {
            url += $"&PetId={searchRequest.SelectedPetIds.First()}";
        }

        NavigationManager.NavigateTo(url);
    }

    private string GetPhotoUrl(string? photoUrl)
    {
        if (string.IsNullOrEmpty(photoUrl))
            return string.Empty;

        if (photoUrl.StartsWith("http"))
            return photoUrl;

        var backendUrl = Configuration["BackendUrl"] ?? "https://localhost:7185";
        return $"{backendUrl.TrimEnd('/')}{photoUrl}";
    }
}