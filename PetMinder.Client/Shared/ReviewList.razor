@using PetMinder.Shared.DTO
@using PetMinder.Client.Services
@inject ReviewService ReviewService
@inject IJSRuntime JS

<div class="space-y-6">
    @if (Reviews == null || !Reviews.Any())
    {
        <div class="rounded-2xl border border-dashed border-slate-300 bg-slate-50 p-8 text-center text-slate-500">
            <p>No reviews yet.</p>
        </div>
    }
    else
    {
        @foreach (var review in Reviews)
        {
            <div class="relative group rounded-2xl border border-slate-100 bg-white p-5 shadow-sm transition hover:shadow-md">
                
                <div class="flex items-start justify-between">
                    <div class="flex items-center gap-3">
                        <div class="h-10 w-10 flex-shrink-0 items-center justify-center rounded-full bg-emerald-100 text-emerald-600 font-bold text-lg flex">
                            @GetInitials(review.ReviewerName)
                        </div>
                        <div>
                            <h4 class="font-bold text-slate-900">@review.ReviewerName</h4>
                            <div class="text-xs text-slate-500">@review.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</div>
                        </div>
                    </div>
                    <div class="flex items-center gap-4">
                        @if (review.SitterRating.HasValue)
                        {
                            <div class="flex flex-col items-end">
                                <span
                                    class="text-[10px] font-bold uppercase tracking-wider text-amber-600 bg-amber-50 px-1.5 py-0.5 rounded border border-amber-100 mb-1">Sitter</span>
                                <StarRating Value="@review.SitterRating.Value" IsReadOnly="true" SizeClass="h-4 w-4" />
                            </div>
                        }
                        else if (review.OwnerRating.HasValue)
                        {
                            <div class="flex flex-col items-end">
                                <span
                                    class="text-[10px] font-bold uppercase tracking-wider text-sky-600 bg-sky-50 px-1.5 py-0.5 rounded border border-sky-100 mb-1">Owner</span>
                                <StarRating Value="@review.OwnerRating.Value" IsReadOnly="true" SizeClass="h-4 w-4" />
                            </div>
                        }
                    </div>
                </div>

                <div class="mt-3">
                    <p class="text-slate-700 text-sm leading-relaxed">@review.Comment</p>
                </div>

                @if (ShowRatingsCheck(review))
                {
                    <div class="mt-3 flex gap-4 border-t border-slate-50 pt-3">
                        @if (review.PetRating.HasValue)
                        {
                            <div class="flex items-center gap-1.5" title="Pet Rating">
                                <span class="text-xs font-semibold text-slate-500 uppercase">Pet</span>
                                <StarRating Value="@review.PetRating.Value" IsReadOnly="true" SizeClass="h-3 w-3" />
                            </div>
                        }
                        @if (review.HouseRating.HasValue)
                        {
                            <div class="flex items-center gap-1.5" title="House Rating">
                                <span class="text-xs font-semibold text-slate-500 uppercase">House</span>
                                <StarRating Value="@review.HouseRating.Value" IsReadOnly="true" SizeClass="h-3 w-3" />
                            </div>
                        }
                    </div>
                }

                <button @onclick="() => OpenReportModal(review.ReviewId)"
                        class="absolute bottom-3 right-3 p-2 text-slate-300 hover:text-rose-500 hover:bg-rose-50 rounded-full transition opacity-0 group-hover:opacity-100"
                        title="Report this review">
                    <Heroicon Name="@HeroiconName.Flag" Type="@HeroiconType.Mini" class="w-4 h-4" />
                </button>
            </div>
        }
    }
</div>

@if (showReportModal)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-slate-900/50 backdrop-blur-sm p-4">
        <div class="bg-white rounded-2xl shadow-xl w-full max-w-md p-6 animate-in fade-in zoom-in duration-200">
            <h3 class="text-lg font-bold text-slate-900 mb-2">Report Review</h3>
            <p class="text-sm text-slate-500 mb-4">Please tell us why this review violates our policies.</p>
            
            <textarea @bind="reportReason" 
                      class="w-full h-32 rounded-xl border-slate-200 bg-slate-50 text-sm p-3 focus:ring-2 focus:ring-rose-500/20 focus:border-rose-500 outline-none resize-none"
                      placeholder="e.g., Abusive language, spam, fake review..."></textarea>
            
            <div class="mt-6 flex gap-3 justify-end">
                <button @onclick="CloseModal" class="px-4 py-2 text-sm font-bold text-slate-600 hover:bg-slate-100 rounded-xl transition">
                    Cancel
                </button>
                <button @onclick="SubmitReport" disabled="@isSubmitting" class="px-4 py-2 text-sm font-bold text-white bg-rose-600 hover:bg-rose-700 rounded-xl shadow-lg shadow-rose-200 transition disabled:opacity-50">
                    @(isSubmitting ? "Sending..." : "Submit Report")
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public List<ReviewDTO>? Reviews { get; set; }

    private bool showReportModal = false;
    private long selectedReviewId;
    private string reportReason = "";
    private bool isSubmitting = false;

    private string GetInitials(string name)
    {
        if (string.IsNullOrWhiteSpace(name)) return "?";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length > 1)
        {
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        }
        return name[0].ToString().ToUpper();
    }

    private bool ShowRatingsCheck(ReviewDTO review)
    {
        return review.PetRating.HasValue || review.HouseRating.HasValue;
    }

    private void OpenReportModal(long reviewId)
    {
        selectedReviewId = reviewId;
        reportReason = "";
        showReportModal = true;
    }

    private void CloseModal()
    {
        showReportModal = false;
    }

    private async Task SubmitReport()
    {
        if (string.IsNullOrWhiteSpace(reportReason) || reportReason.Length < 5)
        {
            await JS.InvokeVoidAsync("alert", "Please provide a reason (at least 5 characters).");
            return;
        }

        isSubmitting = true;
        
        var success = await ReviewService.ReportReviewAsync(new ReportReviewDTO 
        { 
            ReviewId = selectedReviewId, 
            Reason = reportReason 
        });

        isSubmitting = false;
        showReportModal = false;

        if (success)
        {
            await JS.InvokeVoidAsync("alert", "Report submitted. Thank you for keeping our community safe.");
        }
        else
        {
            await JS.InvokeVoidAsync("alert", "Failed to submit report. You may have already reported this review.");
        }
    }
}